# ============================================================================
# IFC-OpenWorld Frontend Environment Configuration
# ============================================================================
# Copy this file to .env and update with your actual values
# Vite requires all frontend env vars to be prefixed with VITE_
#
# Quick Start: cp .env.example .env
# ============================================================================

# ----------------------------------------------------------------------------
# API Configuration
# ----------------------------------------------------------------------------

# Backend API base URL
# Development (Docker Compose):
VITE_API_BASE_URL=http://localhost:3001/api/v1

# Production (use your actual API domain):
# VITE_API_BASE_URL=https://api.yourdomain.com/api/v1

# API request timeout (milliseconds)
VITE_API_TIMEOUT=30000

# API retry attempts for failed requests
VITE_API_RETRY_ATTEMPTS=3

# API retry delay (milliseconds)
VITE_API_RETRY_DELAY=1000

# ----------------------------------------------------------------------------
# CesiumJS Configuration
# ----------------------------------------------------------------------------

# CesiumJS Ion access token (for high-quality imagery and terrain)
# Get your free token at: https://ion.cesium.com/
# Optional: Falls back to OpenStreetMap if not provided
VITE_CESIUM_ION_TOKEN=

# Note: Without Ion token, you'll see:
# - OpenStreetMap imagery (instead of Bing/Sentinel satellite)
# - No 3D terrain (flat globe)
# - All other features work normally

# Cesium asset ID for terrain (default: 1 = Cesium World Terrain)
VITE_CESIUM_TERRAIN_ASSET_ID=1

# Cesium asset ID for imagery (default: 2 = Bing Maps Aerial)
VITE_CESIUM_IMAGERY_ASSET_ID=2

# ----------------------------------------------------------------------------
# File Upload Configuration
# ----------------------------------------------------------------------------

# Maximum upload file size in MB
VITE_MAX_UPLOAD_SIZE_MB=100

# Allowed file extensions (comma-separated)
VITE_ALLOWED_FILE_EXTENSIONS=.ifc

# Upload chunk size for large files (bytes)
VITE_UPLOAD_CHUNK_SIZE=5242880

# Upload polling interval (milliseconds) - how often to check processing status
VITE_UPLOAD_POLLING_INTERVAL=2000

# Upload polling max attempts before timeout
VITE_UPLOAD_POLLING_MAX_ATTEMPTS=300

# ----------------------------------------------------------------------------
# Feature Flags
# ----------------------------------------------------------------------------

# Enable debug mode (shows detailed console logs)
VITE_ENABLE_DEBUG=true

# Enable development tools (React DevTools, etc.)
VITE_ENABLE_DEV_TOOLS=true

# Enable performance monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=false

# Enable experimental features
VITE_ENABLE_EXPERIMENTAL_FEATURES=false

# ----------------------------------------------------------------------------
# UI Configuration
# ----------------------------------------------------------------------------

# Application title
VITE_APP_TITLE=IFC OpenWorld

# Application description
VITE_APP_DESCRIPTION=Web-based 3D viewer for IFC files with geospatial visualization

# Default map view coordinates [longitude, latitude, altitude]
VITE_DEFAULT_VIEW_LON=0
VITE_DEFAULT_VIEW_LAT=20
VITE_DEFAULT_VIEW_ALT=20000000

# Default camera pitch (degrees)
VITE_DEFAULT_CAMERA_PITCH=-90

# Default 3D model rendering mode: true | false
VITE_DEFAULT_3D_MODE=false

# ----------------------------------------------------------------------------
# Performance Configuration
# ----------------------------------------------------------------------------

# Maximum number of 3D models to render simultaneously
VITE_MAX_3D_MODELS=50

# Enable lazy loading for 3D models
VITE_ENABLE_LAZY_LOADING=true

# Lazy loading distance threshold (meters)
VITE_LAZY_LOADING_DISTANCE=100000

# Enable client-side caching
VITE_ENABLE_CACHING=true

# Cache TTL (time to live) in seconds
VITE_CACHE_TTL=300

# Enable service worker for offline support (production only)
VITE_ENABLE_SERVICE_WORKER=false

# ----------------------------------------------------------------------------
# Monitoring & Analytics (Optional)
# ----------------------------------------------------------------------------

# Google Analytics ID (optional)
# VITE_GA_ID=G-XXXXXXXXXX

# Sentry DSN for error tracking (optional)
# VITE_SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0

# Sentry environment
# VITE_SENTRY_ENV=production

# Sentry sample rate (0.0 to 1.0)
# VITE_SENTRY_SAMPLE_RATE=1.0

# PostHog API key (optional)
# VITE_POSTHOG_KEY=phc_XXXXXXXXXX

# PostHog API host
# VITE_POSTHOG_HOST=https://app.posthog.com

# ----------------------------------------------------------------------------
# Development Configuration
# ----------------------------------------------------------------------------

# Vite dev server host
VITE_HOST=localhost

# Vite dev server port
VITE_PORT=5173

# Enable hot module replacement (HMR)
VITE_HMR=true

# Enable source maps
VITE_SOURCE_MAPS=true

# Enable strict mode
VITE_STRICT_MODE=true

# ----------------------------------------------------------------------------
# Build Configuration
# ----------------------------------------------------------------------------

# Build output directory
VITE_OUT_DIR=dist

# Base public path
VITE_BASE=/

# Enable minification
VITE_MINIFY=true

# Enable CSS code splitting
VITE_CSS_CODE_SPLIT=true

# Generate manifest.json
VITE_MANIFEST=true

# ----------------------------------------------------------------------------
# Toast Notifications
# ----------------------------------------------------------------------------

# Toast duration (milliseconds)
VITE_TOAST_DURATION=5000

# Toast position: top-left | top-center | top-right | bottom-left | bottom-center | bottom-right
VITE_TOAST_POSITION=top-right

# Maximum number of toasts to display
VITE_TOAST_MAX=3

# ----------------------------------------------------------------------------
# Accessibility
# ----------------------------------------------------------------------------

# Enable keyboard navigation
VITE_ENABLE_KEYBOARD_NAV=true

# Enable screen reader support
VITE_ENABLE_SCREEN_READER=true

# Enable high contrast mode
VITE_ENABLE_HIGH_CONTRAST=false

# ----------------------------------------------------------------------------
# Localization
# ----------------------------------------------------------------------------

# Default language: en | it | de | fr | es
VITE_DEFAULT_LANGUAGE=en

# Available languages (comma-separated)
VITE_AVAILABLE_LANGUAGES=en,it

# Enable language switcher
VITE_ENABLE_LANGUAGE_SWITCHER=false

# ----------------------------------------------------------------------------
# Advanced Configuration
# ----------------------------------------------------------------------------

# WebGL context attributes
VITE_WEBGL_ANTIALIAS=true
VITE_WEBGL_ALPHA=true
VITE_WEBGL_DEPTH=true
VITE_WEBGL_STENCIL=true

# Enable WebGL 2.0 (if available)
VITE_ENABLE_WEBGL2=true

# Maximum texture size (pixels)
VITE_MAX_TEXTURE_SIZE=4096

# Memory limit for 3D models (MB)
VITE_3D_MEMORY_LIMIT=512

# Enable GPU picking
VITE_ENABLE_GPU_PICKING=true

# ----------------------------------------------------------------------------
# Security
# ----------------------------------------------------------------------------

# Content Security Policy (CSP) nonce
# VITE_CSP_NONCE=

# Enable HTTPS only in production
VITE_HTTPS_ONLY=false

# Enable Subresource Integrity (SRI)
VITE_ENABLE_SRI=false

# ----------------------------------------------------------------------------
# Experimental Features
# ----------------------------------------------------------------------------

# Enable AR/VR mode (experimental)
VITE_ENABLE_AR_VR=false

# Enable collaborative editing (experimental)
VITE_ENABLE_COLLABORATION=false

# Enable offline mode (experimental)
VITE_ENABLE_OFFLINE_MODE=false

# Enable WebAssembly acceleration (experimental)
VITE_ENABLE_WASM=false
