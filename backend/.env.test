# Test Environment Configuration
NODE_ENV=test
PORT=3002
HOST=localhost

# Test Database (same Docker instance, different database)
DATABASE_URL="postgresql://ifc_user:ifc_password@127.0.0.1:5433/ifc_openworld_test"

# S3 Configuration (MinIO)
S3_ENDPOINT=http://localhost:9000
S3_BUCKET=ifc-raw-test
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_REGION=us-east-1
